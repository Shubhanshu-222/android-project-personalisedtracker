<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:textColor="#000000">

    <!-- First LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Checkbox to mark the task as completed -->
        <CheckBox
            android:id="@+id/taskCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <!-- Task title -->
        <TextView
            android:id="@+id/taskText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Task Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Delete button -->
        <Button
            android:id="@+id/deleteTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="#FF0000"/>
    </LinearLayout>

    <!-- Second LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Task description -->
        <TextView
            android:id="@+id/taskDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Description"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <!-- Task due date -->
        <TextView
            android:id="@+id/taskDueDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due Date: YYYY-MM-DD"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- Date Created -->
        <TextView
            android:id="@+id/taskDateCreatedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Created: YYYY-MM-DD"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- Date Completed -->
        <TextView
            android:id="@+id/taskDateCompletedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Completed: YYYY-MM-DD"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <!-- Time Taken -->
        <TextView
            android:id="@+id/taskTimeTakenText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Taken: HH:mm:ss"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />
    </LinearLayout>

</LinearLayout>
