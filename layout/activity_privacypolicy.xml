<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicyActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/background">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/patt"
            android:layout_alignParentStart="true"
            android:contentDescription="Logo"/>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalized Activity and Task Tracker"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_toEndOf="@id/logo"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Terms and Conditions content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/modernwhite">

        <TextView
            android:id="@+id/termsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="8dp"
            android:padding="16dp"
            android:text="Privacy Policy\n\n1. Information We Collect: We collect personal information when you use the app, such as name, email, and usage data.\n\n2. Data Usage: Your information is used solely to improve the user experience and provide relevant services.\n\n3. Data Protection: We implement security measures to protect your personal data.\n\n4. Third-party Services: We do not share your personal data with third-party services, except for necessary app functionalities.\n\n5. User Rights: You can request to view, update, or delete your personal data by contacting us.\n\n6. Changes to Privacy Policy: This policy may change from time to time, and we will notify you of any updates."
            android:textColor="#000000"
            android:textSize="16sp"/>
    </ScrollView>

    <!-- Footer with Social Media Links -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/secondary"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2024 PATT"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="end">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/facebook"
                android:contentDescription="Facebook"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/instagram"
                android:contentDescription="Instagram"
                android:layout_marginStart="16dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/whatsapp"
                android:contentDescription="Whatsapp"
                android:layout_marginStart="16dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/youtube"
                android:contentDescription="YouTube"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
